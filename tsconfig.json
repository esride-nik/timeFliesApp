{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "sourceMap": true,
    "watch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "dom",
      "es2015.promise",
      "scripthost",
      "es5"
    ]
  },
  "include": [
    "app/*",
    "typings/**/*"
  ],
  "exclude" : ["node_modules"]
}